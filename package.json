{
  "name": "suppress-ts-errors",
  "version": "1.1.1",
  "description": "cli tool to add comments to suppress typescript type errors",
  "main": "index.js",
  "bin": {
    "suppress-ts-errors": "dist/cli.js"
  },
  "keywords": [
    "typescript",
    "cli",
    "utility"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix '{src,tests}/**/*.{ts,js}'",
    "format": "prettier --write '{src,tests}/**/*.{ts,js}'",
    "test": "vitest",
    "test:ci": "vitest run",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kawamataryo/suppress-ts-errors.git"
  },
  "author": "Ryo Kawamata <ba068082@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kawamataryo/suppress-ts-errors/issues"
  },
  "homepage": "https://github.com/kawamataryo/suppress-ts-errors#readme",
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "cli-progress": "^3.10.0",
    "node-html-parser": "^6.0.0",
    "ts-morph": "^17.0.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "@types/cli-progress": "3.11.0",
    "@types/glob": "8.0.0",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/yargs": "17.0.13",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "semantic-release": "19.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.3",
    "vitest": "0.25.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "presetConfig": {
            "types": [
              {
                "type": "chore",
                "section": "Chore"
              },
              {
                "type": "refactor",
                "section": "Refactor"
              },
              {
                "type": "perf",
                "section": "Performance"
              }
            ]
          }
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
