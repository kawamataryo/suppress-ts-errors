{
  "name": "suppress-ts-errors",
  "version": "0.2.6",
  "description": "cli tool to add comments to suppress typescript type errors",
  "main": "index.js",
  "bin": {
    "suppress-ts-errors": "dist/cli.js"
  },
  "keywords": [
    "typescript",
    "cli",
    "utility"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix '{src,tests}/**/*.{ts,js}'",
    "format": "prettier --write '{src,tests}/**/*.{ts,js}'",
    "test": "vitest",
    "test:ci": "vitest run",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kawamataryo/suppress-ts-errors.git"
  },
  "author": "Ryo Kawamata <ba068082@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kawamataryo/suppress-ts-errors/issues"
  },
  "homepage": "https://github.com/kawamataryo/suppress-ts-errors#readme",
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "cli-progress": "^3.10.0",
    "ts-morph": "^14.0.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/cli-progress": "^3.9.2",
    "@types/node": "^16.10.2",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.4.1",
    "semantic-release": "^19.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "vitest": "^0.10.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "presetConfig": {
            "types": [
              {
                "type": "chore",
                "section": "Chore"
              },
              {
                "type": "refactor",
                "section": "Refactor"
              },
              {
                "type": "perf",
                "section": "Performance"
              }
            ]
          }
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
