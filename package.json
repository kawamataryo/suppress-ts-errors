{
  "name": "suppress-ts-errors",
  "version": "1.3.3",
  "description": "cli tool to add comments to suppress typescript type errors",
  "main": "index.js",
  "preinstall": "npx only-allow pnpm",
  "bin": {
    "suppress-ts-errors": "dist/cli.js"
  },
  "keywords": [
    "typescript",
    "cli",
    "utility"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "biome check --write ./src",
    "test": "vitest",
    "test:ci": "vitest run",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kawamataryo/suppress-ts-errors.git"
  },
  "author": "Ryo Kawamata <ba068082@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kawamataryo/suppress-ts-errors/issues"
  },
  "homepage": "https://github.com/kawamataryo/suppress-ts-errors#readme",
  "dependencies": {
    "@vue/compiler-sfc": "^3.5.11",
    "ansi-colors": "^4.1.3",
    "cli-progress": "^3.12.0",
    "ts-morph": "^23.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@types/cli-progress": "3.11.6",
    "@types/glob": "8.1.0",
    "@types/node": "22.9.2",
    "@types/react": "18.3.12",
    "@types/yargs": "17.0.33",
    "@typescript-eslint/eslint-plugin": "8.15.0",
    "@typescript-eslint/parser": "8.15.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "lint-staged": "15.2.10",
    "semantic-release": "24.2.0",
    "ts-node": "10.9.2",
    "typescript": "5.7.2",
    "vitest": "2.1.5"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "biome check --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "presetConfig": {
            "types": [
              {
                "type": "chore",
                "section": "Chore"
              },
              {
                "type": "refactor",
                "section": "Refactor"
              },
              {
                "type": "perf",
                "section": "Performance"
              }
            ]
          }
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
